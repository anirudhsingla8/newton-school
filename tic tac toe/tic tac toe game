<script>
    let flag = 0;
    let count = 0;
    let pause;
    let current_score;
    var high_score = 0;
    let run;
    let id;
    let previous;
    function reset_counter(){
        var a = document.getElementById("timer");
        a.innerText = 0;
        count=0;
    }

    function startTimer(){
        if(pause == undefined){
            pause = setInterval(increment,1000);
        }
    }
    function stop_timer() {
        clearInterval(pause);
        pause = undefined;
    }
    function pause_game() {
        stop_timer();
        document.getElementById("start_game").disabled=false;
        clearInterval(run);
        document.getElementById(previous).style.backgroundColor = "rgba(255, 255, 255, 0.8)";
        if(current_score>high_score){
            document.getElementById("high_score").innerText = current_score;
            high_score=current_score;
        }
    }
    function increment() {
        count++;
        var a = document.getElementById("timer");
        a.innerText = count;
    }
    function begin(){
        if(previous != null){
            document.getElementById(previous).style.backgroundColor = "rgba(255, 255, 255, 0.8)";
        }
        id = Math.ceil(Math.random() * 9);
        console.log(id);
        document.getElementById(id).style.backgroundColor= "red";
        previous = id;
    }
    function startGame() {
        startTimer();
        document.getElementById("start_game").disabled = true;
        var person1 = prompt("Please enter name for first Player");
        var person2 = prompt("Please enter name for second Player");
        document.getElementById("first-name").innerText = person1;
        document.getElementById("second-name").innerText = person2;
    }
    function clicked(cid){
        if(this.getAttribute("checked")!=true){
            this.setAttribute("checked","true")
            this.innerHTML='x';
            flag=1
        }
    }
</script>
